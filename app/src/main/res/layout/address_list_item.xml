<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:layout_margin="8dp"
    android:id="@+id/cv_cardview"
    android:background="@color/colorPrimary"
    android:padding="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                tools:srcCompat="@tools:sample/avatars"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_address_firstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="8dp"
                tools:text="Marcel" />

            <TextView
                android:id="@+id/tv_address_lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/tv_address_firstname"
                tools:text="Peters" />

            <TextView
                android:id="@+id/tv_address_streetname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/tv_address_firstname"
                tools:text="Buersche Straße" />

            <TextView
                android:id="@+id/tv_address_streetnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_address_streetname"
                android:layout_marginLeft="4dp"
                android:layout_below="@+id/tv_address_firstname"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/tv_address_streetname"
                tools:text="29" />

            <TextView
                android:id="@+id/tv_address_postcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/tv_address_streetname"
                tools:text="49074" />

            <TextView
                android:id="@+id/tv_address_cityname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/tv_address_streetname"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/tv_address_postcode"
                tools:text="Osnabrück" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

